<?xml version="1.0" encoding="UTF-8"?>
<view>
    <columns>
        <group title="Testing 1" name="data" numcolumns="12">
            <column name="id" display="none" order="100">
                <widget type="text" fieldname="id" readonly="true"/>
            </column>
            <column name="id_centroautorizado" title="Centro Autorizado" display="left" order="110">
                <widget type="number" fieldname="id_centroautorizado" max="0" min="0" step="0" required="true"/>
            </column>
            <column name="numero_orden" title="Número de Orden de Trabajo" display="left" order="120">
                <widget type="text" fieldname="numero_orden" maxlength="30" required="true"/>
            </column>
            <column name="fecha_orden" title="Fecha de la Orden" display="left" order="130">
                <widget type="date" fieldname="fecha_orden" required="true"/>
            </column>
        </group>
        <group title="Testing 2" name="data2" numcolumns="12" valign="bottom">
            <column name="id_cliente" title="Cliente" display="left" order="140">
                <widget type="number" fieldname="id_cliente" max="0" min="0" step="0" required="true"/>
            </column>
            <column name="id_vehiculo" title="Vehiculo" display="left" order="150">
                <widget type="number" fieldname="id_vehiculo" max="0" min="0" step="0" required="true"/>
            </column>
            <column name="id_tacografo" title="Tacógrafo" display="left" order="130">
                <widget type="number" fieldname="id_tacografo" max="0" min="0" step="0" required="true"/>
            </column>
        </group>
    </columns>
</view>
